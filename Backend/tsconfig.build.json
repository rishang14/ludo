{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,  // tsc WILL emit files
    "allowImportingTsExtensions": false  // Disabled for production build
  },
   "include": ["src/**/*"],  // Explicitly include all src files
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}